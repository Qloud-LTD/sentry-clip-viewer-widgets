{
  "$schema": "widget-v1.json",
  "id": "compound.teslaHUD",
  "version": "1.0.0",
  "category": "compound",
  "name": "Tesla HUD",
  "description": "Complete Tesla-style HUD combining gear, turn signals, speed, autopilot indicator, and steering wheel",
  "author": "Built-in",

  "canvas": {
    "minWidth": 0.35,
    "minHeight": 0.08
  },

  "options": {
    "showGear": {
      "type": "boolean",
      "default": true,
      "label": "Show Gear",
      "description": "Display gear indicator"
    },
    "showTurnSignals": {
      "type": "boolean",
      "default": true,
      "label": "Show Turn Signals",
      "description": "Display turn signal arrows"
    },
    "showAutopilot": {
      "type": "boolean",
      "default": true,
      "label": "Show Autopilot",
      "description": "Display autopilot status indicator"
    },
    "showSteering": {
      "type": "boolean",
      "default": true,
      "label": "Show Steering",
      "description": "Display rotating steering wheel"
    }
  },

  "elements": [
    {
      "type": "group",
      "layout": "hstack",
      "spacing": "3%w",
      "alignment": "center",
      "size": { "width": "100%", "height": "100%" },
      "children": [
        {
          "type": "widget",
          "ref": "gear.gearColored",
          "size": { "width": "10%", "height": "75%" },
          "visible": "{{options.showGear ?? true}}"
        },
        {
          "type": "widget",
          "ref": "turnSignal.turnSignalArrows",
          "size": { "width": "14%", "height": "45%" },
          "visible": "{{options.showTurnSignals ?? true}}"
        },
        {
          "type": "widget",
          "ref": "speed.speedDigital",
          "size": { "width": "28%", "height": "100%" }
        },
        {
          "type": "widget",
          "ref": "autopilot.autopilotDot",
          "size": { "width": "8%", "height": "45%" },
          "visible": "{{options.showAutopilot ?? true}}"
        },
        {
          "type": "widget",
          "ref": "steering.steeringWheel",
          "size": { "width": "12%", "height": "75%" },
          "visible": "{{options.showSteering ?? true}}"
        },
        {
          "type": "widget",
          "ref": "throttle.throttleCombinedBar",
          "size": { "width": "6%", "height": "85%" }
        },
        {
          "type": "widget",
          "ref": "compass.compassNumeric",
          "size": { "width": "10%", "height": "70%" }
        }
      ]
    }
  ]
}
