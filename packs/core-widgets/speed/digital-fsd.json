{
  "$schema": "widget-v1.json",
  "id": "speed.digitalFSD",
  "version": "1.0.0",
  "category": "speed",
  "name": "Speed with Autopilot",
  "description": "Digital speed display with autopilot status dot",
  "author": "Built-in",

  "canvas": {
    "minWidth": 0.08,
    "minHeight": 0.10
  },

  "bindings": {
    "dotColor": {
      "conditions": [
        { "when": "{{autopilot.state == 'fsd'}}", "value": "#0066FF" },
        { "when": "{{autopilot.state == 'autosteer'}}", "value": "#00CC00" },
        { "when": "{{autopilot.state == 'tacc'}}", "value": "#FF9900" }
      ],
      "default": "#FFFFFF"
    },
    "dotOpacity": {
      "conditions": [
        { "when": "{{autopilot.engaged == true}}", "value": "1.0" }
      ],
      "default": "0.3"
    }
  },

  "elements": [
    {
      "type": "group",
      "layout": "vstack",
      "spacing": "2%h",
      "size": { "width": "100%", "height": "100%" },
      "children": [
        {
          "type": "circle",
          "radius": "5%h",
          "fill": "{{dotColor}}",
          "opacity": "{{dotOpacity}}"
        },
        {
          "type": "text",
          "content": "{{speed.formatted ?? '--'}}",
          "style": {
            "fontSize": "45%h",
            "fontWeight": "bold",
            "fontDesign": "rounded",
            "color": "#FFFFFF",
            "minimumScaleFactor": 0.5
          }
        },
        {
          "type": "text",
          "content": "{{speed.unit}}",
          "style": {
            "fontSize": "12%h",
            "fontWeight": "medium",
            "color": "rgba(255,255,255,0.7)"
          }
        }
      ]
    }
  ]
}
