{
  "$schema": "widget-v1.json",
  "id": "temperature.temperatureCompact",
  "version": "1.0.0",
  "category": "temperature",
  "name": "Compact Temperatures",
  "description": "Both temperatures in a compact horizontal layout",
  "author": "Built-in",

  "canvas": {
    "minWidth": 0.10,
    "minHeight": 0.03
  },

  "elements": [
    {
      "type": "group",
      "layout": "hstack",
      "spacing": "6%w",
      "size": { "width": "100%", "height": "100%" },
      "children": [
        {
          "type": "group",
          "layout": "hstack",
          "spacing": "2%w",
          "children": [
            {
              "type": "icon",
              "name": "car",
              "size": "55%h",
              "color": "#FF9500"
            },
            {
              "type": "text",
              "content": "{{temp.insideFormatted ?? '--°'}}",
              "style": {
                "fontSize": "55%h",
                "fontWeight": "medium",
                "fontDesign": "rounded",
                "color": "#FF9500"
              }
            }
          ]
        },
        {
          "type": "text",
          "content": "|",
          "style": {
            "fontSize": "50%h",
            "fontWeight": "light",
            "color": "rgba(255,255,255,0.3)"
          }
        },
        {
          "type": "group",
          "layout": "hstack",
          "spacing": "2%w",
          "children": [
            {
              "type": "icon",
              "name": "thermometer",
              "size": "55%h",
              "color": "#00D4FF"
            },
            {
              "type": "text",
              "content": "{{temp.outsideFormatted ?? '--°'}}",
              "style": {
                "fontSize": "55%h",
                "fontWeight": "medium",
                "fontDesign": "rounded",
                "color": "#00D4FF"
              }
            }
          ]
        }
      ]
    }
  ]
}
