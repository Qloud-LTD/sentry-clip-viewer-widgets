{
  "$schema": "widget-v1.json",
  "id": "autopilot.dot",
  "version": "1.0.0",
  "category": "autopilot",
  "name": "Autopilot Status Dot",
  "description": "Color-coded dot indicating autopilot state",
  "author": "Built-in",

  "canvas": {
    "aspectRatio": 1.0,
    "minWidth": 0.02,
    "minHeight": 0.02
  },

  "bindings": {
    "dotColor": {
      "conditions": [
        { "when": "{{autopilot.state == 'fsd'}}", "value": "#0066FF" },
        { "when": "{{autopilot.state == 'autosteer'}}", "value": "#00CC00" },
        { "when": "{{autopilot.state == 'tacc'}}", "value": "#FF9900" }
      ],
      "default": "#FFFFFF"
    }
  },

  "elements": [
    {
      "type": "circle",
      "radius": "40%",
      "position": { "x": "50%", "y": "50%" },
      "fill": "{{dotColor}}"
    }
  ]
}
