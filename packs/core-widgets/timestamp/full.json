{
  "$schema": "widget-v1.json",
  "id": "timestamp.timestampFull",
  "version": "1.0.0",
  "category": "timestamp",
  "name": "Full Timestamp",
  "description": "Date and time on separate lines",
  "author": "Built-in",

  "canvas": {
    "minWidth": 0.12,
    "minHeight": 0.06
  },

  "elements": [
    {
      "type": "group",
      "layout": "vstack",
      "spacing": "5%h",
      "alignment": "leading",
      "size": { "width": "100%", "height": "100%" },
      "children": [
        {
          "type": "text",
          "content": "{{timestamp.date ?? '---'}}",
          "style": {
            "fontSize": "25%h",
            "fontWeight": "medium",
            "color": "rgba(255,255,255,0.8)"
          }
        },
        {
          "type": "text",
          "content": "{{timestamp.time ?? '--:--:--'}}",
          "style": {
            "fontSize": "40%h",
            "fontWeight": "bold",
            "fontDesign": "monospaced",
            "color": "#FFFFFF"
          }
        }
      ]
    }
  ]
}
