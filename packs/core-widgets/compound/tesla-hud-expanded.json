{
  "$schema": "widget-v1.json",
  "id": "compound.teslaHUDExpanded",
  "version": "1.0.0",
  "category": "compound",
  "name": "Tesla HUD Expanded",
  "description": "Full Tesla-style HUD with all driving indicators",
  "author": "Built-in",

  "canvas": {
    "minWidth": 0.40,
    "minHeight": 0.08
  },

  "elements": [
    {
      "type": "group",
      "layout": "hstack",
      "spacing": "4%w",
      "alignment": "center",
      "size": { "width": "100%", "height": "100%" },
      "children": [
        {
          "type": "group",
          "layout": "vstack",
          "spacing": "4%h",
          "alignment": "center",
          "size": { "width": "12%", "height": "100%" },
          "children": [
            {
              "type": "widget",
              "ref": "gear.gearColored",
              "size": { "width": "100%", "height": "45%" }
            },
            {
              "type": "widget",
              "ref": "throttle.throttleCombined",
              "size": { "width": "60%", "height": "50%" }
            }
          ]
        },
        {
          "type": "widget",
          "ref": "turnSignal.turnSignalArrows",
          "size": { "width": "10%", "height": "40%" }
        },
        {
          "type": "group",
          "layout": "vstack",
          "spacing": "2%h",
          "alignment": "center",
          "size": { "width": "25%", "height": "100%" },
          "children": [
            {
              "type": "widget",
              "ref": "autopilot.autopilotDot",
              "size": { "width": "30%", "height": "25%" }
            },
            {
              "type": "widget",
              "ref": "speed.speedDigitalUnit",
              "size": { "width": "100%", "height": "70%" }
            }
          ]
        },
        {
          "type": "group",
          "layout": "vstack",
          "spacing": "4%h",
          "alignment": "center",
          "size": { "width": "15%", "height": "100%" },
          "children": [
            {
              "type": "widget",
              "ref": "compass.compassNumeric",
              "size": { "width": "100%", "height": "45%" }
            },
            {
              "type": "widget",
              "ref": "steering.steeringWheelAngle",
              "size": { "width": "100%", "height": "50%" }
            }
          ]
        }
      ]
    }
  ]
}
