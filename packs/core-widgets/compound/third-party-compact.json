{
  "$schema": "widget-v1.json",
  "id": "compound.thirdPartyCompact",
  "version": "1.0.0",
  "category": "compound",
  "name": "Third Party Compact",
  "description": "Compact third-party data with battery and outside temp",
  "author": "Built-in",

  "canvas": {
    "minWidth": 0.15,
    "minHeight": 0.04
  },

  "elements": [
    {
      "type": "group",
      "layout": "hstack",
      "spacing": "10%w",
      "alignment": "center",
      "size": { "width": "100%", "height": "100%" },
      "children": [
        {
          "type": "widget",
          "ref": "battery.batteryCompact",
          "size": { "width": "40%", "height": "100%" }
        },
        {
          "type": "widget",
          "ref": "temperature.temperatureOutside",
          "size": { "width": "40%", "height": "100%" }
        }
      ]
    }
  ]
}
