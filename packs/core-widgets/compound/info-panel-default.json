{
  "$schema": "widget-v1.json",
  "id": "compound.infoPanelDefault",
  "version": "1.0.0",
  "category": "compound",
  "name": "Info Panel",
  "description": "Information panel with location, time, and compass",
  "author": "Built-in",

  "canvas": {
    "minWidth": 0.20,
    "minHeight": 0.08
  },

  "elements": [
    {
      "type": "group",
      "layout": "vstack",
      "spacing": "6%h",
      "alignment": "leading",
      "size": { "width": "100%", "height": "100%" },
      "children": [
        {
          "type": "widget",
          "ref": "location.locationStreet",
          "size": { "width": "100%", "height": "25%" }
        },
        {
          "type": "group",
          "layout": "hstack",
          "spacing": "8%w",
          "alignment": "center",
          "size": { "width": "100%", "height": "35%" },
          "children": [
            {
              "type": "widget",
              "ref": "timestamp.timestampDateTime",
              "size": { "width": "60%", "height": "100%" }
            },
            {
              "type": "widget",
              "ref": "compass.compassCardinal",
              "size": { "width": "25%", "height": "100%" }
            }
          ]
        },
        {
          "type": "widget",
          "ref": "location.locationCoordinates",
          "size": { "width": "100%", "height": "20%" }
        }
      ]
    }
  ]
}
