{
  "$schema": "widget-v1.json",
  "id": "compound.racingExpanded",
  "version": "1.0.0",
  "category": "compound",
  "name": "Racing HUD Expanded",
  "description": "Full racing dashboard with all performance indicators",
  "author": "Built-in",

  "canvas": {
    "minWidth": 0.45,
    "minHeight": 0.12
  },

  "elements": [
    {
      "type": "group",
      "layout": "hstack",
      "spacing": "4%w",
      "alignment": "center",
      "size": { "width": "100%", "height": "100%" },
      "children": [
        {
          "type": "widget",
          "ref": "gForce.gForceCircleValues",
          "size": { "width": "22%", "height": "90%" }
        },
        {
          "type": "group",
          "layout": "vstack",
          "spacing": "3%h",
          "alignment": "center",
          "size": { "width": "32%", "height": "100%" },
          "children": [
            {
              "type": "widget",
              "ref": "speed.speedDigitalUnit",
              "size": { "width": "100%", "height": "55%" }
            },
            {
              "type": "group",
              "layout": "hstack",
              "spacing": "10%w",
              "alignment": "center",
              "size": { "width": "100%", "height": "40%" },
              "children": [
                {
                  "type": "widget",
                  "ref": "gear.gearColored",
                  "size": { "width": "35%", "height": "100%" }
                },
                {
                  "type": "widget",
                  "ref": "steering.steeringAngleOnly",
                  "size": { "width": "45%", "height": "100%" }
                }
              ]
            }
          ]
        },
        {
          "type": "widget",
          "ref": "throttle.throttleSplit",
          "size": { "width": "12%", "height": "90%" }
        },
        {
          "type": "widget",
          "ref": "steering.steeringWheel",
          "size": { "width": "15%", "height": "80%" }
        }
      ]
    }
  ]
}
