{
  "$schema": "widget-v1.json",
  "id": "compound.infoPanelCompact",
  "version": "1.0.0",
  "category": "compound",
  "name": "Info Panel Compact",
  "description": "Compact info panel with time and coordinates",
  "author": "Built-in",

  "canvas": {
    "minWidth": 0.18,
    "minHeight": 0.05
  },

  "elements": [
    {
      "type": "group",
      "layout": "hstack",
      "spacing": "6%w",
      "alignment": "center",
      "size": { "width": "100%", "height": "100%" },
      "children": [
        {
          "type": "widget",
          "ref": "timestamp.timestampTimeOnly",
          "size": { "width": "35%", "height": "100%" }
        },
        {
          "type": "rect",
          "size": { "width": "1%", "height": "60%" },
          "fill": "rgba(255,255,255,0.3)"
        },
        {
          "type": "widget",
          "ref": "location.locationCompact",
          "size": { "width": "50%", "height": "100%" }
        }
      ]
    }
  ]
}
