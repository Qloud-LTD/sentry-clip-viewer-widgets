{
  "$schema": "widget-v1.json",
  "id": "throttle.throttlePedalDual",
  "version": "1.0.0",
  "category": "throttle",
  "name": "Dual Pedals",
  "description": "Brake pedal (left, red) and throttle pedal (right, green) side by side",
  "author": "Built-in",

  "canvas": {
    "aspectRatio": 1.8,
    "minWidth": 0.06,
    "minHeight": 0.04
  },

  "bindings": {
    "throttleFillHeight": {
      "default": "{{throttle.percent}}%"
    },
    "throttleFillColor": {
      "conditions": [
        { "when": "{{throttle.percent > 0}}", "value": "#34C759" }
      ],
      "default": "rgba(255, 255, 255, 0.3)"
    },
    "brakeFillHeight": {
      "conditions": [
        { "when": "{{brake.applied}}", "value": "100%" }
      ],
      "default": "0%"
    },
    "brakeFillColor": {
      "conditions": [
        { "when": "{{brake.applied}}", "value": "#FF3B30" }
      ],
      "default": "rgba(255, 255, 255, 0.3)"
    }
  },

  "elements": [
    {
      "type": "group",
      "layout": "hstack",
      "alignment": "center",
      "spacing": "10%w",
      "children": [
        {
          "type": "group",
          "id": "brakePedal",
          "layout": "zstack",
          "alignment": "bottom",
          "size": { "width": "40%", "height": "100%" },
          "children": [
            {
              "type": "rect",
              "id": "brakeBackground",
              "size": { "width": "80%", "height": "90%" },
              "position": { "x": "50%", "y": "50%" },
              "anchor": "center",
              "cornerRadius": "15%w",
              "fill": "rgba(255, 255, 255, 0.15)",
              "stroke": {
                "color": "rgba(255, 255, 255, 0.3)",
                "width": 1
              }
            },
            {
              "type": "rect",
              "id": "brakeFill",
              "size": { "width": "80%", "height": "{{brakeFillHeight}}" },
              "maxHeight": "90%",
              "position": { "x": "50%", "y": "95%" },
              "anchor": "bottomCenter",
              "cornerRadius": "15%w",
              "fill": "{{brakeFillColor}}"
            },
            {
              "type": "rect",
              "id": "brakeRidges1",
              "size": { "width": "55%", "height": "2%" },
              "position": { "x": "50%", "y": "25%" },
              "anchor": "center",
              "cornerRadius": "50%h",
              "fill": "rgba(255, 255, 255, 0.2)"
            },
            {
              "type": "rect",
              "id": "brakeRidges2",
              "size": { "width": "55%", "height": "2%" },
              "position": { "x": "50%", "y": "40%" },
              "anchor": "center",
              "cornerRadius": "50%h",
              "fill": "rgba(255, 255, 255, 0.2)"
            },
            {
              "type": "rect",
              "id": "brakeRidges3",
              "size": { "width": "55%", "height": "2%" },
              "position": { "x": "50%", "y": "55%" },
              "anchor": "center",
              "cornerRadius": "50%h",
              "fill": "rgba(255, 255, 255, 0.2)"
            },
            {
              "type": "rect",
              "id": "brakeRidges4",
              "size": { "width": "55%", "height": "2%" },
              "position": { "x": "50%", "y": "70%" },
              "anchor": "center",
              "cornerRadius": "50%h",
              "fill": "rgba(255, 255, 255, 0.2)"
            }
          ]
        },
        {
          "type": "group",
          "id": "throttlePedal",
          "layout": "zstack",
          "alignment": "bottom",
          "size": { "width": "40%", "height": "100%" },
          "children": [
            {
              "type": "rect",
              "id": "throttleBackground",
              "size": { "width": "80%", "height": "90%" },
              "position": { "x": "50%", "y": "50%" },
              "anchor": "center",
              "cornerRadius": "15%w",
              "fill": "rgba(255, 255, 255, 0.15)",
              "stroke": {
                "color": "rgba(255, 255, 255, 0.3)",
                "width": 1
              }
            },
            {
              "type": "rect",
              "id": "throttleFill",
              "size": { "width": "80%", "height": "{{throttleFillHeight}}" },
              "maxHeight": "90%",
              "position": { "x": "50%", "y": "95%" },
              "anchor": "bottomCenter",
              "cornerRadius": "15%w",
              "fill": "{{throttleFillColor}}"
            },
            {
              "type": "rect",
              "id": "throttleRidges1",
              "size": { "width": "55%", "height": "2%" },
              "position": { "x": "50%", "y": "25%" },
              "anchor": "center",
              "cornerRadius": "50%h",
              "fill": "rgba(255, 255, 255, 0.2)"
            },
            {
              "type": "rect",
              "id": "throttleRidges2",
              "size": { "width": "55%", "height": "2%" },
              "position": { "x": "50%", "y": "40%" },
              "anchor": "center",
              "cornerRadius": "50%h",
              "fill": "rgba(255, 255, 255, 0.2)"
            },
            {
              "type": "rect",
              "id": "throttleRidges3",
              "size": { "width": "55%", "height": "2%" },
              "position": { "x": "50%", "y": "55%" },
              "anchor": "center",
              "cornerRadius": "50%h",
              "fill": "rgba(255, 255, 255, 0.2)"
            },
            {
              "type": "rect",
              "id": "throttleRidges4",
              "size": { "width": "55%", "height": "2%" },
              "position": { "x": "50%", "y": "70%" },
              "anchor": "center",
              "cornerRadius": "50%h",
              "fill": "rgba(255, 255, 255, 0.2)"
            }
          ]
        }
      ]
    }
  ]
}
