{
  "$schema": "widget-v1.json",
  "id": "throttle.throttlePedalSinglePercentLeft",
  "version": "1.0.0",
  "category": "throttle",
  "name": "Pedal with Percent (Left)",
  "description": "Throttle pedal with percentage text on left",
  "author": "Built-in",

  "canvas": {
    "aspectRatio": 1.5,
    "minWidth": 0.06,
    "minHeight": 0.04
  },

  "bindings": {
    "fillHeight": {
      "default": "{{throttle.percent}}%"
    },
    "fillColor": {
      "conditions": [
        { "when": "{{throttle.percent > 0}}", "value": "#34C759" }
      ],
      "default": "rgba(255, 255, 255, 0.3)"
    },
    "textColor": {
      "conditions": [
        { "when": "{{throttle.percent > 0}}", "value": "#34C759" }
      ],
      "default": "rgba(255, 255, 255, 0.5)"
    }
  },

  "elements": [
    {
      "type": "group",
      "layout": "hstack",
      "alignment": "center",
      "spacing": "5%w",
      "children": [
        {
          "type": "text",
          "content": "{{throttle.formatted ?? '--%'}}",
          "size": { "width": "45%" },
          "anchor": "trailing",
          "style": {
            "fontSize": "30%h",
            "fontWeight": "bold",
            "fontDesign": "rounded",
            "color": "{{textColor}}"
          }
        },
        {
          "type": "group",
          "layout": "zstack",
          "alignment": "bottom",
          "size": { "width": "45%", "height": "100%" },
          "children": [
            {
              "type": "rect",
              "id": "pedalBackground",
              "size": { "width": "75%", "height": "90%" },
              "position": { "x": "50%", "y": "50%" },
              "anchor": "center",
              "cornerRadius": "15%w",
              "fill": "rgba(255, 255, 255, 0.15)",
              "stroke": {
                "color": "rgba(255, 255, 255, 0.3)",
                "width": 1
              }
            },
            {
              "type": "rect",
              "id": "pedalFill",
              "size": { "width": "75%", "height": "{{fillHeight}}" },
              "maxHeight": "90%",
              "position": { "x": "50%", "y": "95%" },
              "anchor": "bottomCenter",
              "cornerRadius": "15%w",
              "fill": "{{fillColor}}"
            },
            {
              "type": "rect",
              "id": "pedalRidges1",
              "size": { "width": "50%", "height": "2%" },
              "position": { "x": "50%", "y": "25%" },
              "anchor": "center",
              "cornerRadius": "50%h",
              "fill": "rgba(255, 255, 255, 0.2)"
            },
            {
              "type": "rect",
              "id": "pedalRidges2",
              "size": { "width": "50%", "height": "2%" },
              "position": { "x": "50%", "y": "40%" },
              "anchor": "center",
              "cornerRadius": "50%h",
              "fill": "rgba(255, 255, 255, 0.2)"
            },
            {
              "type": "rect",
              "id": "pedalRidges3",
              "size": { "width": "50%", "height": "2%" },
              "position": { "x": "50%", "y": "55%" },
              "anchor": "center",
              "cornerRadius": "50%h",
              "fill": "rgba(255, 255, 255, 0.2)"
            },
            {
              "type": "rect",
              "id": "pedalRidges4",
              "size": { "width": "50%", "height": "2%" },
              "position": { "x": "50%", "y": "70%" },
              "anchor": "center",
              "cornerRadius": "50%h",
              "fill": "rgba(255, 255, 255, 0.2)"
            }
          ]
        }
      ]
    }
  ]
}
